<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/order_product_img"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/product_cover" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/order_product_name"
                android:textColor="@color/black"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:textSize="9dp"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/order_product_qty"
                android:textColor="#c35805"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QTY: 5"/>
        </LinearLayout>
        <TextView
            android:id="@+id/order_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHP2500"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/prod_categ_bg"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>