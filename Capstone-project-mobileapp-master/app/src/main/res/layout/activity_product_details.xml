<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductDetailsActivity">

    <LinearLayout
        android:id="@+id/prod_d_ll"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/prod_d_const_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/prod_d_back"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/back_left" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/app_black"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Details" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/prod_details_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="11dp"
                android:paddingRight="5dp"
                android:textColor="#bc1a04"
                android:textSize="19dp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prod_d_const_l"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prod_d_ll">

        <ImageView
            android:id="@+id/prod_details_imgview"
            android:layout_width="370dp"
            android:layout_height="240dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@id/prod_details_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/product_cover" />

        <LinearLayout
            android:id="@+id/prod_details_container"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/prod_details_imgview">

            <TextView
                android:id="@+id/prod_details_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shovel"
                android:textColor="@color/app_black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="15dp">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="Price: "
                    android:textSize="12dp"
                    android:textColor="@color/app_jet"/>

                <TextView
                    android:id="@+id/prod_details_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="P300.50"
                    android:textColor="#c35805"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/increase"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAlignment="center"
                    android:textSize="15dp"/>
                <EditText
                    android:id="@+id/quantity_input"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:hint="QTY"
                    android:textSize="15dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/decrease"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/app_jet"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/prod_details_description_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:text="A Friendly Clown On one corner of my dresser sits a smiling toy clown on a tiny unicyclea gift I received last Christmas from a close friend. A Friendly Clown On one corner of my dresser sits a smiling toy clown on a tiny unicyclea gift I received last Christmas from a close friend.A Friendly Clown On one corner of my dresser sits a smiling toy clown on a tiny unicyclea gift I received last Christmas from a close friend."
                        android:textColor="@color/app_black"
                        android:textSize="14dp" />
                </LinearLayout>


            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">


                <include
                    android:id="@+id/prod_details_add_to_cart_btn"
                    layout="@layout/button_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>